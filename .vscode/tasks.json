{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ сборка активного файла",
			"command": "/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-O0",
				"input_reader.cpp",
				"Tests.cpp",
				"transport_catalogue.cpp",
				"stat_reader.cpp",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "компилятор: /bin/g++"
		}
	]
}